@model AutoMart.Models.Feedback

<h2>Please give your review</h2>
</br>

@using (Html.BeginForm(actionName: "New", controllerName: "Feedbacks", method: FormMethod.Post, routeValues: new { id = Model.VehicleId }))
{
    @Html.LabelFor(m => m.ReviewText, "Your Review: ")
    <br />
    @Html.TextAreaFor(m => m.ReviewText, new { @class = "form-control" })
    <br />
    <br />
    @Html.ValidationMessageFor(m => m.ReviewText, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(m => m.Rating, "Your Rating: ")
    <br />
    @Html.EditorFor(m => m.Rating, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    <br />
    @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.VehicleId)
    @Html.HiddenFor(m => m.DateSubmitted, new { @Value = DateTime.Now })

    <button class="btn btn-outline-secondary" type="submit">Submit the review!</button>
}
